{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "target": "ES5",
    "baseUrl": "./src",
    "rootDir": "./src",
    "noEmit": false,
    "declarationMap": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "strictNullChecks": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
